<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>

    <div class="row">
      <div class="col=md-4" style="margin-right:10px;">
        <%= image_tag "profileRotatedAndCutted.jpg", 
        width: 300, alt: "Profile picture"%>
        <div class="skills">
          <% @skills.each do |skill| %>
            <h4> <%= skill.title%> </h4>
            <div class="progress">
              <div 
                class="progress-bar progress-bar-striped bg-warning"
                role="progressbar"
                aria-valuenow="<%= skill.percent_utilized%>"
                aria-valuemax="100"
                style="width: <%= skill.percent_utilized %>%"  
              >
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div calss="col=md-8">
        <p> TEXT </p>

        <p> 
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Job History
          </button>
        </p>
        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              JOBBBBSSSSSS
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>

